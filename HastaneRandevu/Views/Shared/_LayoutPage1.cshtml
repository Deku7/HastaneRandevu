@model HastaneRandevu.Models.User

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="~/font-awesome/css/font-awesome.css" />
    <link rel="stylesheet" type="text/css" href="~/StyleSheet1.css" />
</head>
<body>

    <nav class="navbar navbar-expand-md fixed-top navbar-dark bg-info">
        <div class="container">
            <div class="collapse navbar-collapse" id="menu">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a href="@Url.Action("Index","Hastane")" class="nav-link">
                            <i class="fa fa-home" aria-hidden="true"></i>
                            Anasayfa
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Doktorlar","Hastane")" class="nav-link">
                            <i class="fa fa-user-md" aria-hidden="true"></i>
                            Doktorlar
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Uzmanliklar","Hastane")" class="nav-link">
                            <i class="fa fa-medkit" aria-hidden="true"></i>
                            Uzmanlıklar
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Randevular","Hastane")" class="nav-link">
                            <i class="fa fa-list" aria-hidden="true"></i>
                            Randevular
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Iletisim","Hastane")" class="nav-link">
                            <i class="fa fa-phone" aria-hidden="true"></i>
                            iletişim
                        </a>
                    </li>
                    <form action="" class="form-inline">
                        <input type="text" class="form-control mr-3" placeholder="Arama Yap...">
                        <button class="btn btn-outline-danger">Arama Yap</button>
                    </form>
                </ul>
                @if (Session["userID"] == null)
                {
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <button type="button" class="btn btn-info" data-toggle="modal" data-target="#modalLoginForm">
                                <i class="fa fa-sign-in" aria-hidden="true"></i>
                                Giris
                            </button>
                        <li class="nav-item ">
                            <button type="button" class="btn btn-info" data-toggle="modal" data-target="#modalRegisterForm">
                                <i class="fa fa-registered" aria-hidden="true"></i>
                                Kayıt
                            </button>
                        </li>
                    </ul>
                }
                else
                {
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a href="@Url.Action("Logout","Hastane")" class="nav-link" onclick="">
                                <i class="fa fa-sign-out" aria-hidden="true"></i>
                                @Session["userName"].ToString() Çıkış
                            </a>
                        </li>
                    </ul>
                }


            </div>
        </div>
    </nav>
    <div id="container">
        <div id="main" class="bg-light">
            <h1>asd</h1>
            @RenderBody()
        </div>
    </div>


    <footer class="bg-info p-5" id="footer">
        <div class="">
            <div class="row">
                <div class="col-md-5 text-white">
                    <h5>Bağlantılar</h5>
                    <hr class="border-light">
                    <ul class="nav">
                        <li class="nav-item">
                            <a href="@Url.Action("Index","Hastane")" class="nav-link pl-0 text-white">Anasayfa</a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Doktorlar","Hastane")" class="nav-link pl-0 text-white">Doktorlar</a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Uzmanliklar","Hastane")" class="nav-link pl-0 text-white">Uzanlıklar</a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Randevular","Hastane")" class="nav-link pl-0 text-white">Randevular</a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Iletisim","Hastane")" class="nav-link pl-0 text-white">İletişim</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <div class="modal fade" id="modalLoginForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header text-center">
                    <h4 class="modal-title w-100 font-weight-bold text-info">Giriş</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form method="post" action="/Hastane/Login">
                    <div class="modal-body mx-3">
                        <div class="md-form mb-3">
                            <i class="fa fa-user" aria-hidden="true"></i>
                            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                            <label data-error="wrong" data-success="right" for="defaultForm-email">İsim</label>
                        </div>
                        <div class="md-form mb-3">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                            @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                            <label data-error="wrong" data-success="right" for="defaultForm-pass">Şifre</label>
                        </div>
                    </div>
                    <div class="modal-footer d-flex justify-content-center">
                        <button class="btn btn-info">Giriş Yap</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalRegisterForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header text-center">
                    <h4 class="modal-title w-100 font-weight-bold text-info">Kayıt</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form method="post" action="/Hastane/Register">
                    <div class="modal-body mx-3">
                        <div class="row">
                            <div class="md-form mb-3 mr-3">
                                <i class="fa fa-user" aria-hidden="true"></i>
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                                <label data-error="wrong" data-success="right" for="orangeForm-name">İsim</label>
                            </div>
                            <div class="md-form mb-3 mt-4">
                                @Html.TextBoxFor(m => m.UserSurname, new { @class = "form-control" })
                                <label data-error="wrong" data-success="right" for="orangeForm-name">Soyisim</label>
                            </div>
                        </div>
                        <div class="md-form mb-3">
                            <i class="fa fa-id-card" aria-hidden="true"></i>
                            @Html.TextBoxFor(m => m.TC, new { @class = "form-control" })
                            <label data-error="wrong" data-success="right" for="orangeForm-email">TC</label>
                        </div>
                        <div class="md-form mb-3">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            <label data-error="wrong" data-success="right" for="orangeForm-email">Email</label>
                        </div>
                        <div class="md-form mb-3">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            <label data-error="wrong" data-success="right" for="orangeForm-pass">Şifre</label>
                        </div>
                    </div>
                    <div class="modal-footer d-flex justify-content-center">
                        <button class="btn btn-info">Kayıt Ol</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</body>
</html>

